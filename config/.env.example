# TaskMasterAI Environment Configuration
# Copy this file to .env and fill in your values

# Google API Credentials
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# OpenAI API Key (for LLM summarization)
# Get from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (alternative LLM)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
LOG_LEVEL=INFO
DRAFT_MODE=true
CONFIRMATION_REQUIRED=true

# Rate Limiting
MAX_EMAILS_PER_SYNC=100
MAX_CALENDAR_DAYS_AHEAD=30

# Stripe Configuration (for billing)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PRICE_PERSONAL=price_personal_id_here
STRIPE_PRICE_PRO=price_pro_id_here
STRIPE_PRICE_TEAM=price_team_id_here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
